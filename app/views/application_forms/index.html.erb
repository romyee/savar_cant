<%- model_class = ApplicationForm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:form_id) %></th>
      <th><%= model_class.human_attribute_name(:request_date) %></th>
      <th><%= model_class.human_attribute_name(:type_of_move) %></th>
      <th><%= model_class.human_attribute_name(:purpose) %></th>
      <th><%= model_class.human_attribute_name(:duration) %></th>
      <th><%= model_class.human_attribute_name(:tracking_id) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @application_forms.each do |application_form| %>
      <tr>
        <td><%= link_to application_form.id, application_form_path(application_form) %></td>
        <td><%= application_form.user_id %></td>
        <td><%= application_form.form_id %></td>
        <td><%= application_form.request_date %></td>
        <td><%= application_form.type_of_move %></td>
        <td><%= application_form.purpose %></td>
        <td><%= application_form.duration %></td>
        <td><%= application_form.tracking_id %></td>
        <td><%= application_form.status %></td>
        <td><%=l application_form.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_application_form_path(application_form), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      application_form_path(application_form),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_application_form_path,
            :class => 'btn btn-primary' %>
