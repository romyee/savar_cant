<%- model_class = ApplicationForm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @application_form.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:form_id) %>:</strong></dt>
  <dd><%= @application_form.form_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:request_date) %>:</strong></dt>
  <dd><%= @application_form.request_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_of_move) %>:</strong></dt>
  <dd><%= @application_form.type_of_move %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purpose) %>:</strong></dt>
  <dd><%= @application_form.purpose %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @application_form.duration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tracking_id) %>:</strong></dt>
  <dd><%= @application_form.tracking_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @application_form.status %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              application_forms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_application_form_path(@application_form), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              application_form_path(@application_form),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
