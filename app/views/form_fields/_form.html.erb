<%= simple_form_for @form_field, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :label %>
  <%= f.input :answer_type %>
  <%= f.input :answer_options %>
  <%= f.input :form_id %>
  <%= f.input :suggation %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                form_fields_path, :class => 'btn' %>
  </div>
<% end %>
