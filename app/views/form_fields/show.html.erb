<%- model_class = FormField -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:label) %>:</strong></dt>
  <dd><%= @form_field.label %></dd>
  <dt><strong><%= model_class.human_attribute_name(:answer_type) %>:</strong></dt>
  <dd><%= @form_field.answer_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:answer_options) %>:</strong></dt>
  <dd><%= @form_field.answer_options %></dd>
  <dt><strong><%= model_class.human_attribute_name(:form_id) %>:</strong></dt>
  <dd><%= @form_field.form_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:suggation) %>:</strong></dt>
  <dd><%= @form_field.suggation %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              form_fields_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_form_field_path(@form_field), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              form_field_path(@form_field),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
