<%= simple_form_for @form, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description, :input_html => { :size => "60x7"}  %>
  <%= f.input :note, :input_html => { :size => "60x7"}  %>
  <%= f.input :status %>
  <%= f.input :sub_title %>
  <%= f.input :instructions, :input_html => { :size => "60x7"}  %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                forms_path, :class => 'btn' %>
  </div>
<% end %>
